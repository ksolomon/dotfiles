alias ls='ls $LS_OPTIONS'
alias ll='ls $LS_OPTION -lh --color'
alias l='ls $LS_OPTIONS -Ff --color'
alias la='ls $LS_OPTIONS -af --color'
alias ld='ls -d $LS_OPTIONS -af --color'  # directories only!
alias dir='ls -alh'
alias del='rm'

# Search process list
psg() {
    ps aux | grep -v grep | grep $1 --color
}

# Apply sane permissions to files and folders
alias fixdirs='find . -type d -exec chmod 755 {} \;'
alias fixfiles='find . -type f -exec chmod 644 {} \;'

# Spin up a new barebones WordPress theme for development.  Depends on BitBucket-CLI (https://bitbucket.org/zhemao/bitbucket-cli)
function wpcreate {
	export THEMEPATH=/mnt/Dev-Server/SWD/wp-content/themes

	echo "Creating new repo for:" $1
	bb create --private $1

	echo "Setting up new local repo and adding files"
	cd $THEMEPATH
	bb clone ksolomon $1

	echo "Copying framework files"
	cd $THEMEPATH/$1
	echo "ksolomon/"$1 > git-repo.txt
	cp -R $THEMEPATH/SF5/* .

	echo "Adding framework to remote repo"
	git add .
	git commit -m 'initial commit'
	git push origin master

	echo "Starting SublimeText"
	cd ..
	subl $1
}

# Some more alias to avoid making mistakes:
alias copy='cp'

# -h makes the numbers human
alias df='df -h'
alias du='du -h -c'
alias ps='ps'
alias mkdir='mkdir -p'
alias grep='grep --colour'
alias g="grep"
alias cls='clear; stats'

# Folder bookmarks with quick jump function
export MARKPATH=$HOME/.marks

function jump {
	cd -P "$MARKPATH/$1" 2>/dev/null || echo "No such mark: $1"
}

function mark {
	mkdir -p "$MARKPATH"; ln -s "$(pwd)" "$MARKPATH/$1"
}

function unmark {
	rm -i "$MARKPATH/$1"
}

function marks {
	\ls -l "$MARKPATH" | tail -n +2 | sed 's/  / /g' | cut -d' ' -f9- | awk -F ' -> ' '{printf "%-10s -> %s\n", $1, $2}'
}
